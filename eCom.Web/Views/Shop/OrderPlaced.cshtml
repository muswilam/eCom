@model OrderPlacedViewModel

@{
    ViewBag.title = "Orders";
}

@if (Model != null && Model.Orders != null && Model.Orders.Count > 0)
{
    var i = 1;
    <section class="flat-row main-shop shop-slidebar">
        <div class="container">
            <div class="row">
                <div class="col-md-8 order-md-2 mb-4">
                    <h2 class="d-flex justify-content-between align-items-center mb-3">
                        <span class="text-muted">@Model.User.Name Orders</span>
                    </h2>
                    <ul class="list-group mb-3">
                        @foreach (var order in Model.Orders)
                        {
                            <li class="list-group-item  d-block justify-content-between lh-condensed">
                                <div>
                                    <h2 class="my-0">
                                  @i - @switch (order.Status)
                                        {
                                            case "In Progress":
                                                <span class="badge badge-warning  ">@order.Status</span>
                                                break;
                                            case "Delivered":
                                            <span class="badge badge-success ">@order.Status</span>
                                                break;
                                            default:
                                            <span class="badge badge-primary ">@order.Status</span>
                                                break;
                                        }
                                    </h2>
                                </div>
                                <div class="mt-3 mb-2">
                                    <h4 class="text-muted">
                                       Total amount: $<text class="text-danger">@order.TotalAmount </text>
                                    </h4>
                                </div>
                                <div class="mt-3 mb-2">
                                    <h4 class="text-muted">
                                        Deliver on: @(order.OrderedAt.AddDays(5).ToString("D"))
                                    </h4>
                                </div>
                            </li>
                           i++;
                        }
                    </ul>
                </div>
            </div>
        </div><!-- /.container -->
    </section>
}
else
{
    <div class="alert alert-danger">
        No Orders have been placed yet.
    </div>
}